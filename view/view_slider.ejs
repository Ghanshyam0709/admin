<%- include('header') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">
                            <!-- <form class="form-header py-3" >
                                <input class="au-input au-input--xl" type="text" name="search" placeholder="Search for datas &amp; reports..." />
                                <button class="au-btn--submit" type="submit">
                                    <i class="zmdi zmdi-search"></i>
                                </button>
                            </form> -->
                            <form action="">
                                <div class="d-flex my-3">
                                    <input class="form-control" name="search" type="text" placeholder="Search..">
                                    <input type="submit" value="search" name="searching" class="mx-2">
                                </div>
                            </form>
                            <form method="post" action="/slider/mulDel">
                            <table class="table table-borderless table-striped table-earning first text-left ">
                                <thead>
                                    <tr>
                                        <th>title <input type="checkbox" name="mulDel" id="muldel"></th>
                                        <th>Description</th>
                                        <th>Image</th>
                                        <th>status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                
                                        <% for(var dt of data){ %>
                                            
                                            <tr>
                                                
                                                <td><input type="checkbox" name="mulDel[]" class="singleDelet" value="<%= dt.id %>"></td>
                                                <td>
                                                    <%=dt.title%>
                                                </td>
                                                <td>
                                                    <%=dt.content%>
                                                </td>
                                                <td><img src="<%=dt.image%>" height="50" width="50"></td>
                                                <td>
                                                    <a href="/slider/delet/<%= dt.id %>"><i
                                                            class="fa-solid fa-trash "
                                                            style="font-size: 20px; margin-right: 8px;"></i></a>
                                                    <a href="/slider/edit_page/<%= dt.id %>"><i
                                                            class="fa-solid fa-pen-to-square"
                                                            style="font-size: 20px; margin-right: 8px;"></i></a>    
                                                    <!-- Active -->
                                                        <% if(dt.isActive){ %>
                                                            <a
                                                                href="?id=<%= dt.id %>&status=deActive&search=<%= search %>&page=<%= cpage %>"><i
                                                                    class="fa-regular fa-circle-check"
                                                                    style="color: rgb(101, 187, 16); font-size: 20px;"></i></a>
                                                            <% }else{ %>
                                                                <!-- deActive -->
                                                                <a
                                                                    href="?id=<%= dt.id %>&status=Active&search=<%= search %>&page=<%= cpage %>"><i
                                                                        class="fa-regular fa-circle-check"
                                                                        style="font-size: 20px;"></i> </a>
                                                                <% } %>
                                                    </td>
                                                </tr>
                                                <% } %>

                                </tbody>
                                
                                <tfoot>
                                   
                                    <tr>
                                        <td>
                                            <% var pageNum=cpage %>

                                                <% var pre=--pageNum %>
                                                    <% if(pre>0) {%>
                                                        <a href="?page=<%= pre%>&search=<%= search %>">
                                                          pre </a>
                                                                <% } %>
                                                                    <a href="<%= cpage%>&search=<%= search %>">
                                                                        <%=cpage%>
                                                                    </a>
                                                                    <% var next=++cpage %>

                                                                        <% if(cpage<= page_Num){ %>
                                                                            <a
                                                                                href="?page=<%= next %>&search=<%= search %>">
                                                                                next
                                                                               </a>
                                                                        <% } %>
                                        </td>
                                    </tr>
                                </tfoot>
                                
                                
                                  
                            </table>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>