<%- include('header') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">
                            <table class="table table-borderless table-striped table-earning first text-left ">
                                <thead>
                                    <tr>
                                        <th>title</th>
                                        <th>content</th>
                                        <th>Image</th>
                                        <th>opration</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var od of offerdata) {%>
                                        <tr>
                                            <td>
                                                <%= od.icon %>
                                            </td>
                                            <td>
                                                <%= od.title %>
                                            </td>
                                            <td>
                                                <%= od.content %>
                                            </td>
                                            <td><a href="/offer/isActive/<%= od.id %>"><% if(od.isActive){ %>active<%  } else { %> deactive <% } %>  </a>
                                            </td>
                                            <td>delete || update</td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>